# Example environment variables for MenuSaaS
# Copy this to .env and fill values in production.

DATABASE_URL=postgresql://menuapp:password@db:5432/menudb?schema=public
JWT_SECRET=replace_with_strong_secret
ADMIN_KEY=replace_with_admin_key
COOKIE_SECRET=replace_with_cookie_secret

# Cloudflare (optional) - required for CDN purge of menus
# Create an API token with "Cache Purge:Edit" permission for the zone.
CF_API_TOKEN=your_cloudflare_api_token_here
CF_ZONE_ID=your_cloudflare_zone_id_here

# R2 (Cloudflare) placeholders
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=menu-saas-images
R2_PUBLIC_URL=https://pub-yourbucket.r2.dev

NODE_ENV=production
PORT=3000
APP_URL=https://your-app.example
